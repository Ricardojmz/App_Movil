<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".ecoweb">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="90sp"
            app:srcCompat="@drawable/h" />
    </LinearLayout>

    <!--Texto de Login-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/intimacy"
            android:gravity="center_horizontal"
            android:text="ECOtesch web"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:orientation="horizontal"
        android:layout_marginTop="35sp"
        >
        <!--Texto-->
        <LinearLayout
            android:layout_width="180sp"
            android:layout_height="200sp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="1. Presiona el botón Escanear"
                android:fontFamily="@font/intimacy"/>
            <TextView
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:textColor="#000000"
                android:text="2. Escanea el codigo QR de la página de ECOtesch"
                android:fontFamily="@font/intimacy"/>
            <TextView
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:textColor="#000000"
                android:text="3. ¡Listo!"
                android:fontFamily="@font/intimacy"/>

        </LinearLayout>
        <!--Animacion-->
        <LinearLayout
            android:layout_width="180sp"
            android:layout_height="180sp"
            >
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animationVi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:lottie_imageAssetsFolder="assets"
                app:lottie_fileName="scanerqr.json"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <Button
            android:id="@+id/btnescanerweb"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:text="Escanear"
            android:textColor="#ffffff"
            android:background="@color/colorPrimary"
            android:fontFamily="@font/intimacy"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/mostrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>